<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20282F"
    android:orientation="vertical"
    tools:context=".stolenphone">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Report Stolen Phone"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#FFB900" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Brand of device *"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/brand"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"

                    android:layout_marginRight="30dp"
                    android:background="@drawable/input_field"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="text"
                    android:paddingTop="10dp"
                    android:textColor="#FFB900"
                    android:textColorHint="#FFB900" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Model of device *"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/model"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/input_field"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="text"
                    android:paddingTop="10dp"
                    android:textColor="#FFB900"
                    android:textColorHint="#FFB900" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Color of Device *"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/color"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/input_field"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="text"
                    android:paddingTop="10dp"
                    android:textColor="#FFB900"
                    android:textColorHint="#FFB900" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="IMEI number of device *"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/imei"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/input_field"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="number"
                    android:paddingTop="10dp"
                    android:textColor="#FFB900"
                    android:textColorHint="#FFB900" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Phone number *"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/lostphone"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/input_field"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="number"
                    android:paddingTop="10dp"
                    android:textColor="#FFB900"
                    android:textColorHint="#FFB900" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Last Seen"
                    android:textColor="#FFFFFF" />


                <EditText
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/input_field"
                    android:ems="10"
                    android:hint="Date"
                    android:textColor="#FFB900"
                    android:textColorHint="#FFB900"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/losttime"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/input_field"
                    android:ems="10"
                    android:hint="Time"
                    android:textColor="#FFB900"
                    android:textColorHint="#FFB900"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Details regarding incident *"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/lostdetail"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/input_field"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:paddingTop="10dp"
                    android:textColor="#FFB900"
                    android:textColorHint="#FFB900" />

                <TextView
                    android:id="@+id/textView1111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:text="* Mandatory Fields"
                    android:textColor="#FFFFFF" />


                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:visibility="gone" />


                <Button
                    android:id="@+id/reportphone"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="80dp"
                    android:background="#4AFF70"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"

                    android:textSize="16sp" />


            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>