<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#20282F"
    tools:context=".stolenvehicle">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"
                    android:text="Report Missing Person"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:layout_marginBottom="10dp"
                    android:background="#FFB900"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Name of Missing Person * "
                    android:textColor="#FFFFFF">

                </TextView>

                <EditText
                    android:id="@+id/mp_name"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/input_field"
                    android:ems="10"
                    android:textColor="#FFB900"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Age * "
                    android:textColor="#FFFFFF">

                </TextView>

                <EditText
                    android:id="@+id/mp_age"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/input_field"
                    android:ems="10"
                    android:hint="Eg:18"
                    android:textSize="15dp"
                    android:textColorHint="#FFB900"
                    android:inputType="number"
                    android:textColor="#FFB900"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Height in cms"
                    android:textColor="#FFFFFF">

                </TextView>

                <EditText
                    android:id="@+id/mp_height"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/input_field"
                    android:ems="10"
                    android:hint="Eg :150"
                    android:textSize="15dp"
                    android:textColorHint="#FFB900"
                    android:inputType="numberDecimal"
                    android:textColor="#FFB900"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="BirthMark"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/mp_birthmark"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/input_field"
                    android:ems="10"
                    android:inputType="textLongMessage"
                    android:textColor="#FFB900"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Gender *"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/mp_gender"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/input_field"
                    android:ems="10"
                    android:textColor="#FFB900"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Hair Color *"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/mp_haircolor"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/input_field"
                    android:ems="10"
                    android:textColor="#FFB900"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Missing Since *"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/mp_missingdate"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/input_field"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:ems="10"
                    android:textColor="#FFB900"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="* Mandatory Fields"
                    android:textSize="12dp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:textSize="10dp"
                    android:text="Please Upload Image for Ease of Investigation"
                    android:textColor="#FFFFFF" />



                <ImageView
                    android:id="@+id/upload_mp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:clickable="true"
                    android:src="@drawable/camera" />

                <ProgressBar
                    android:id="@+id/mp_pgrbar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingTop="20dp"/>

                <Button
                    android:id="@+id/mp_submit"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="50dp"
                    android:background="#4AFF70"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>




</LinearLayout>